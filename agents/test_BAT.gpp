action go_to(number px, number py, number pz, number ox, number oy, number oz, number ow) {
mapping:
	"/navigate_to_pose" {
		px = px,
		py = py,
		pz = pz,
		ox = ox,
		oy = oy,
		oz = oz,
		ow = ow
	}
}

procedure main(){
	while (true) {
		increaseHeight();
		spot_gait("jog");
		start(navigateToFrame("frame1"));
		start(playSound("Rickroll"));
		end(navigateToFrame("frame1"));
		reduceHeight();
		spot_gait("trot");
		navigateToFrame("frame2");
		normalPose();
		end(playSound("Rickroll"));
		start(playSound("Rickroll"));
		spot_gait("hop");
		navigateToFrame("frame3");
		reduceHeight();
		spot_gait("trot");
		navigateToFrame("frame4");
	}
}